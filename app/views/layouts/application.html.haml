%html
  %head
    %meta{ charset: 'utf-8' }
    %title Vandelay Industries Toy Store
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    #header
      %h1= link_to 'Vandelay Industries Toy Store', products_path

    .flash
      - if flash[:notice]
        %p#notice= flash[:notice]
      - else flash[:alert]
        %p#warning= flash[:warning]

  = yield

